{
    "name": "wedding",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "private": true,
    "dependencies": {
        "browser-sync": "^2.23.6",
        "clean-css-cli": "^4.1.11",
        "imagemin-cli": "^3.0.0",
        "uglify-js": "^3.3.18"
    },
    "scripts": {
        "serve": "browser-sync start --server --files './**/*'",
        "images": "imagemin src/img/* --out-dir=build/img",
        "styles": "cleancss -o build/css/styles.min.css src/css/*.css",
        "scripts":
            "uglifyjs src/js/bootstrap.js src/js/smooth-scroll.js src/js/scripts.js -c -o build/js/scripts.min.js",
        "build": "npm run images && npm run scripts && npm run styles"
    }
}
